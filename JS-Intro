#EXPLICAÇÃO DA AULA

/*"const"a variável vai ser fixa, nunca vai receber um valor diferente */
const fullName = "Natalia Scigliano"
/**"let" é quando vai mudar e se reatribuído */
let fullName

/**Os arrays podem ter vários dentro, mas ideal é que sejam separados */
const list = ["string", 12345, true]
const list = [1234]
const list = ["string"]
const list = [true]

/*esse aqui não é um tipo, mas é utilizado bastante. 
 *É um objeto! Esse não é tipo primitivo igual os anteriores.
 Mas é possível manipular os outros utilizando ele*/
 const obj = {}


 /*COMPARAÇÃO ESTRITA: ver os outros tipos na internet*/
 /*Compara valores, daria certo. Ele Lê o que tá dentro da string */
 if ("1000" == 1000) {
    console.log("Tudo certo!")
} 
/*Com 3 '=' ele compara valor + tipo */
/*Aqui daria errado, porque são tipos diferentes */
if ("1000" === 1000) {
    console.log("Tudo certo!")
}

/*'let index = 0' -> é onde inicia
'index < array.length' -> index inicia em 0, ele é menor do que o array.lenght (comprimento dele).
Esse "array" pode ser substituído por outra variável instanciada inicialmente no código.
'index++' significa que está incrementando para repetir o próximo elemento*/

for (let index = 0; index < array.length; index++) {
    const element = array[index];
}

/*Tem que declarar a variável de início antes */
let count = 0
while(count < 4) {
    console.log(list[count])
    count++
}

/*A função é igual no python, tem que chamar ela depois */
function soma() {
    console.log("aqui é uma função")
}

soma()

//Arrow Function
// quando vai se inserir um valor nessa função, não precisa abrir chave {}
//a não ser que vá se passar mais de uma função dentro, daí tem que usar chave
//exemplo de utilização com 2 em math
const soma2 = (num1,num2) => console.log(num1 + num2)

soma2(20,40)

const math2 = (num1,num2) => {
	console.log(num1 + num2)
  console.log(num1 * num2)
}

math2(40,50)
